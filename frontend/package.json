{
  "name": "vidgo-electron",
  "version": "1.0.0",
  "description": "VidGo - Local Video Management Platform",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:electron": "vue-tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite --mode electron"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-squirrel-startup": "^1.0.1",
    "element-plus": "^2.13.0",
    "highlight.js": "^11.11.1",
    "hls.js": "^1.6.15",
    "lucide-vue-next": "^0.562.0",
    "markdown-it": "^14.1.0",
    "marked": "^17.0.1",
    "markmap-lib": "^0.18.12",
    "markmap-view": "^0.18.12",
    "mermaid": "^11.12.2",
    "mind-elixir": "^5.3.8",
    "pinia": "^2.1.0",
    "showdown": "^2.1.0",
    "video.js": "^8.23.4",
    "vue": "^3.4.0",
    "vue-dndrop": "^1.3.4",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.0",
    "wavesurfer.js": "^7.12.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vue-tsc": "^1.8.0"
  },
  "build": {
    "appId": "com.vidgo.app",
    "productName": "VidGo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend-dist",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png"
    }
  },
  "author": "",
  "license": "MIT"
}
